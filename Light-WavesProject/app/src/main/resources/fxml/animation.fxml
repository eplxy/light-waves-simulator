                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnPlay" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" text="⏵">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnPause" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" text="⏸" />
         </children>
      </HBox>
   </bottom>
   <center>
      <Pane fx:id="animationPane" prefHeight="690.0" prefWidth="1100.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
